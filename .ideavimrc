let mapleader= " "

set hlsearch
set scrolloff=100
set ignorecase smartcase
set showmode
set history=1000
set incsearch
set clipboard+=unnamed
set number relativenumber
set visualbell
set idearefactormode=keep
set showcmd

" Extensions
set ideajoin
set multiple-cursors
set surround
set NERDTree
set hls

map Q gq

" Source
:map <leader>so :source ~/.ideavimrc<CR>

" Plugins
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'preservim/nerdtree'
nmap <C-n> :action ActivateProjectToolWindow<CR>
map <leader>n :NERDTreeClose<CR>

Plug 'easymotion/vim-easymotion'

map <leader>d <Action>(Debug)
map <leader>r <Action>(RenameElement)
map <leader>c <Action>(Stop)
map <leader>z <Action>(ToggleDistractionFreeMode)

map <leader>s <Action>(SelectInProjectView)
map <leader>a <Action>(Annotate)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <S-Space> <Action>(GotoNextError)

" Toggle Terminal
nmap <C-t> :action ActivateTerminalToolWindow<CR>

" Split Windows
nmap <leader>hs :action SplitHorizontally<CR>
nmap <leader>vs :action SplitVertically<CR>

" Navigation within insert mode
imap <c-k> <Up>
imap <c-j> <Down>
imap <c-h> <Left>
imap <c-l> <Right>
imap <c-i> <CR>
imap <C-e> <End>
imap <C-a> <Home>

" Buffers in normal mode
nmap <c-s> :w <CR>
nmap <leader>x :q <CR>
nmap <leader>b :tabnew <CR>
nnoremap <c-h> <c-w>h
nnoremap <c-k> <c-w>k
nnoremap <a-h> gT
nnoremap <a-l> gT
nnoremap <c-s-tab> gT
nnoremap <c-tab> gt

" clear the search buffer when hitting return
nnoremap <space><cr> :nohlsearch<cr>
" Reformat the current line only"
map <leader>l V<Action>(ReformatCode)

" Finder
map <leader>ff :action Find<cr>
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>o <Action>(FileStructurePopup)

imap jk <Esc>

"" Map \b to toggle the breakpoint on the current line
"map \b <Action>(ToggleLineBreakpoint)
